<?xml version="1.0" encoding="UTF-8"?>
<project name="Flurry Extension Build Scripts" default="all">
	
	<property file="build.config"/>
		
	<target name="all" depends="ios,swc,default,package" description="Full build of extension"/>
	
	<target name="ios" description="Build iOS Library">
		<mkdir dir="../temp/ios/"/>
		<mkdir dir="../bin/ios/"/>

		<exec executable="xcodebuild" failonerror="true" dir="../ios/FlurryIosExtension">
			<arg line='-project FlurryIosExtension.xcodeproj'/>
			<arg line='-target FlurryIosExtension'/>
			<arg line='-configuration Release'/>
			<arg line='SYMROOT=../../temp/ios/'/>
		</exec>
		
		<copy file="../temp/ios/Release-iphoneos/libFlurryIosExtension.a" todir="../bin/ios" overwrite="true"/>
		<copy file="../ios/FlurryIosExtension/FlurryAnalytics/libFlurryAnalytics.a" todir="../bin/ios" overwrite="true"/>
		
		<delete dir="../temp/ios"/>
	</target>
		
	<target name="swc" description="Build swc library">
		<mkdir dir="../bin/swc/"/>
		
		<fileset dir="../actionscript/src" casesensitive="yes" id="classfiles">
			<include name="**/*.as"/>
		</fileset>

		<pathconvert property="classlist" refid="classfiles" pathsep=" " dirsep=".">
			<regexpmapper from=".*src.(.*)\.as" to="\1"/>
		</pathconvert>
		
		<exec executable="${sdk.home}/bin/compc${bin.ext}" failonerror="true">
			<arg line='-source-path ../actionscript/src'/>
			<arg line='-output ../bin/swc/${name}.swc'/>
			<arg line='-swf-version=13'/>
			<arg line='-external-library-path+="${sdk.home}/frameworks/libs/air/airglobal.swc"'/>
			<arg line='-include-classes ${classlist}'/>
		</exec>

		<unzip src="../bin/swc/${name}.swc" dest="../temp/swc" overwrite="true"/>
		<copy file="../temp/swc/library.swf" todir="../bin/ios" overwrite="true"/>
		<delete dir="../temp/swc"/>
	</target>
	
	<target name="default" description="Build default swc library">
		<mkdir dir="../bin/default/"/>
		<mkdir dir="../temp/default/"/>
		
		<fileset dir="../default/src" casesensitive="yes" id="classfiles2">
			<include name="**/*.as"/>
		</fileset>

		<pathconvert property="classlist2" refid="classfiles2" pathsep=" " dirsep=".">
			<regexpmapper from=".*src.(.*)\.as" to="\1"/>
		</pathconvert>
		
		<exec executable="${sdk.home}/bin/compc${bin.ext}" failonerror="true">
			<arg line='-source-path ../default/src'/>
			<arg line='-output ../temp/default/${name}.swc'/>
			<arg line='-swf-version=13'/>
			<arg line='-external-library-path+="${sdk.home}/frameworks/libs/air/airglobal.swc"'/>
			<arg line='-include-classes ${classlist2}'/>
		</exec>

		<unzip src="../temp/default/${name}.swc" dest="../temp/default/swc" overwrite="true"/>
		<copy file="../temp/default/swc/library.swf" todir="../bin/default" overwrite="true"/>
		<delete dir="../default/swc"/>
	</target>
	
	<target name="package" description="Create the extension package">
		<exec executable="${sdk.home}/bin/adt${bin.ext}" failonerror="true" dir="../bin">
			<arg value="-package"/>
			<arg value="-storetype"/>
			<arg value="pkcs12"/>
			<arg value="-keystore"/>
			<arg value="${keystore.file}"/>
			<arg value="-storepass"/>
			<arg value="${keystore.password}"/>
			<arg value="-target"/>
			<arg value="ane"/>
			<arg value="${name}.ane"/>
			<arg value="../build/extension.xml"/>
			<arg line="-swc swc/${name}.swc"/>
			<arg line="-platform iPhone-ARM -platformoptions ../build/platform.xml -C ios/ ."/>
			<arg line="-platform default -C default/ ."/>
		</exec>
	</target>
</project>